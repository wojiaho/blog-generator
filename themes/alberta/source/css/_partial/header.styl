#header
  height: 350px
  position: relative
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
  &:after
    bottom: 0

#overlay
  width: 100%
  height: 120px
  background: url("/header.png")
  background-size: cover
  background-attachment: fixed
  margin: 0 auto
  padding: 0

#profile_img
  text-align: center

#circle_img
  width: 150px
  height: 150px
  border: 2px solid #ffffff
  border-radius: 150px
  -webkit-border-radius: 150px
  -moz-border-radius: 150px

#header-outer
  height: 100%
  top: -80px
  position: relative

#header-title
  text-align: center
  position: absolute
  top: 55%
  left: 0px
  margin-top: logo-size * -0.5

#header-inner
  text-align: center
  position: relative
  width: 100%
  top: 20%
  left: 0px

#header-menu
  width: 100%
  position: relative
  top: 35%
  z-index: 2

$logo-text
  text-decoration: none
  color: black
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  text-align: center

#main-nav ul li
  display: inline-block

.icon-setting
  color: color-nav-icon
  font-size: 30px
  padding: 0px 15px
  cursor: pointer
  opacity: 0.6
  &:hover
    opacity: 1

$nav-link
  display: inline-block
  color: black
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: 20px
  width: font-size
  height: font-size
  padding: 20px 15px
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777